<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:focusable="true">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/crime_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crime Title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/hacker_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/crime_solved_icon"
        android:importantForAccessibility="no"/>

    <!-- Date TextView -->
    <TextView
        android:id="@+id/crime_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crime Date"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/hacker_green_dim"
        app:layout_constraintTop_toBottomOf="@id/crime_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/crime_solved_icon"
        android:importantForAccessibility="no"/>

    <!-- Solved Icon -->
    <ImageView
        android:id="@+id/crime_solved_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/crime_solved_icon_desc"
        android:src="@drawable/ic_solved"
        app:tint="@color/hacker_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no"/>
</androidx.constraintlayout.widget.ConstraintLayout>
